[program:zookeeper]
user=zookeeper
command={{ zookeeper_install_dir }}/bin/zkServer.sh start-foreground
stopsignal=KILL
autostart=true
autorestart=true
directory={{ zookeeper_install_dir }}
environment=JAVA_HOME={{ java_install_dir }}/{{ java_version }},ZOO_LOG_DIR={{ zookeeper_log_dir }},ZOOCFGDIR={{ zookeeper_conf_dir }}
stdout_logfile={{ zookeeper_log_dir }}/zookeeper.out.log
stderr_logfile={{ zookeeper_log_dir }}/zookeeper.err.log
